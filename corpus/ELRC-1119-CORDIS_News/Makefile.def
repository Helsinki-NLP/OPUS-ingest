# -*-makefile-*-
#
# name & version of the corpus


## CORPUSNAME = subdir under OPUS/corpus/
CORPUS  = ${firstword ${subst /, ,$(shell pwd | sed 's|^.*/corpus/\(.*\)$$|\1|')}}

## current version
VERSION = v1

LICENSE = openUnder-PSI
COPYRIGHT = Check details at <a href="https://elrc-share.eu/repository/browse/english-italian-parallel-corpus-from-cordis-project-news/e52ec9f60ae511e9b7d400155d0267067d6313451cee443bbb2f0c45b0b7e77a/">ELRC share</a>

