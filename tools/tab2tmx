use strict;
use FindBin qw($Bin);


my $time = localtime();
my $srclang='en';
my $trglang='nl';

while ($ARGV[0]=~/^\-/){
    my $o=shift(@ARGV);
    if ($o=~/^\-s/){$srclang=shift @ARGV;}
    if ($o=~/^\-t/){$trglang=shift @ARGV;}
}

binmode(STDIN, ":utf8");
binmode(STDOUT, ":utf8");


&PrintTMXHeader();

while (<>){
    chomp;
    my ($src,$trg)=split(/\t/);
    &txt2xml($src);
    &txt2xml($trg);

    print "    <tu>\n";
    print "      <tuv xml:lang=\"$srclang\"><seg>";
    print $src;
    print "</seg></tuv>\n";
    print "      <tuv xml:lang=\"$trglang\"><seg>";
    print $trg;
    print "</seg></tuv>\n";
    print "    </tu>\n";
}

&PrintTMXTail();


# simplistic conversion of text to xmlified text

sub txt2xml{
#    my $string=shift;
    $_[0]=~s/\&/\&amp\;/gs;
    $_[0]=~s/\</\&lt\;/gs;
    $_[0]=~s/\>/\&gt\;/gs;
#    $_[0]=~s/\"/\&quot\;/gs;
#    $_[0]=~s/\'/\&apos\;/gs;
#    return $string;
}

sub PrintTMXHeader{
    print '<?xml version="1.0" encoding="UTF-8" ?>'."\n";
    print '<tmx version="1.4">'."\n";
    print '<header creationdate="';
    print $time;
    print '"'."\n";
    print '          srclang="'.$srclang."\"\n";
    print '          adminlang="'.$srclang."\"\n";
    print "          o-tmf=\"unknown\"\n";
    print "          segtype=\"sentence\"\n";
    print '          creationtool="Uplug"'."\n";
    print '          creationtoolversion="unknown"'."\n";
    print '          datatype="PlainText" />'."\n";
    print '  <body>'."\n";
}



sub PrintTMXTail{
    print '  </body>'."\n";
    print '</tmx>'."\n";
}

